# Database Configuration
POSTGRES_USER=llm_user
POSTGRES_PASSWORD=llm_password_local
POSTGRES_DB=system_llm
DATABASE_URL=postgresql://llm_user:llm_password_local@postgres:5432/system_llm

# PgAdmin Configuration
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin

# Admin User Configuration (optional - for manual admin creation via seed_admin.py)
# To create admin: python -m app.scripts.seed_admin
# Or set these env vars for custom credentials:
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=your-secure-password
# ADMIN_FULL_NAME=System Administrator

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
PROJECT_NAME=System LLM
API_V1_PREFIX=/api/v1
DEBUG=True

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
DEFAULT_LLM_MODEL=gpt-5-mini

# Cloud Storage Configuration
# STORAGE_TYPE options: "local" or "gcs"
STORAGE_TYPE=local

# GCS (Google Cloud Storage) Configuration
# Required if STORAGE_TYPE=gcs
GCS_BUCKET_NAME=gs://system-llm-storage
GCS_PROJECT_ID=system-llm
GCS_CREDENTIALS_PATH=/path/to/service-account-key.json