# Cloud SQL Configuration
# Use this environment file when connecting to Google Cloud SQL

# Database Configuration (Google Cloud SQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-change-this
POSTGRES_DB=system_llm

# Security
SECRET_KEY=use-openssl-rand-hex-32-to-generate-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Settings
PROJECT_NAME=System LLM
API_V1_PREFIX=/api/v1
DEBUG=False

# CORS (update with your frontend domains)
BACKEND_CORS_ORIGINS=["https://yourdomain.com"]

# LLM Configuration
OPENAI_API_KEY=sk-your-openai-key-here
DEFAULT_LLM_MODEL=gpt-4-mini

# Cloud Storage Configuration (GCS Recommended)
STORAGE_TYPE=gcs
GCS_BUCKET_NAME=system-llm-storage
GCS_PROJECT_ID=system-llm
GOOGLE_APPLICATION_CREDENTIALS=/app/gcs-key.json

# PgAdmin (Optional)
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin-password-change-this
