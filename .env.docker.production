# Database Configuration (for Google Cloud SQL)
# Update this with your Cloud SQL connection string
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=system_llm
DATABASE_URL=postgresql://postgres:your-secure-password@/system_llm?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME

# Security
SECRET_KEY=use-openssl-rand-hex-32-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Settings
PROJECT_NAME=System LLM
API_V1_PREFIX=/api/v1
DEBUG=False

# CORS (update with your frontend URL)
BACKEND_CORS_ORIGINS=["https://yourdomain.com"]

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
DEFAULT_LLM_MODEL=gpt-4-mini

# Cloud Storage Configuration (GCS FOR PRODUCTION)
STORAGE_TYPE=gcs
GCS_BUCKET_NAME=system-llm-storage
GCS_PROJECT_ID=system-llm
GOOGLE_APPLICATION_CREDENTIALS=/app/gcs-key.json
