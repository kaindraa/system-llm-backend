# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# JSON files
*.json text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose.yml text eol=lf
*.sh text eol=lf

# Markdown
*.md text eol=lf

# Config files
.env text eol=lf
.env.* text eol=lf
requirements.txt text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
